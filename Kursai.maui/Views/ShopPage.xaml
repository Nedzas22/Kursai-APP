<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Kursai.maui.Views.ShopPage"
             Title="{Binding Title}"
             BackgroundColor="{StaticResource Background}">
    
    <Grid RowDefinitions="Auto,*" RowSpacing="0">
        
        <!-- Premium Header with Search -->
        <Frame Grid.Row="0" 
               CornerRadius="0,0,32,32"
               Background="{StaticResource PrimaryGradient}"
               Padding="24,20,24,24"
               HasShadow="True"
               BorderColor="Transparent">
            <VerticalStackLayout Spacing="16">
                <Label Text="Discover Courses"
                       FontSize="28"
                       FontFamily="OpenSansSemibold"
                       TextColor="{StaticResource TextOnPrimary}"
                       Margin="0,4,0,0"/>
                
                <Frame BackgroundColor="{StaticResource Surface}"
                       CornerRadius="16"
                       Padding="4"
                       HasShadow="False"
                       HeightRequest="56"
                       BorderColor="{StaticResource Border}">
                    <SearchBar Text="{Binding SearchText}"
                               Placeholder="Search for courses..."
                               BackgroundColor="Transparent"
                               PlaceholderColor="{StaticResource TextTertiary}"
                               TextColor="{StaticResource TextPrimary}"
                               CancelButtonColor="{StaticResource Primary}"/>
                </Frame>
            </VerticalStackLayout>
        </Frame>

        <!-- Courses List -->
        <RefreshView Grid.Row="1"
                     Command="{Binding LoadCoursesCommand}"
                     IsRefreshing="{Binding IsBusy}"
                     RefreshColor="{StaticResource Primary}">
            <CollectionView ItemsSource="{Binding Courses}"
                            SelectionMode="None"
                            Margin="16,16,16,0">
                <CollectionView.EmptyView>
                    <VerticalStackLayout HorizontalOptions="Center"
                                        VerticalOptions="Center"
                                        Spacing="20"
                                        Padding="40">
                        <Label Text="ðŸ”"
                               FontSize="72"
                               HorizontalOptions="Center"/>
                        <Label Text="No courses found"
                               FontSize="24"
                               FontFamily="OpenSansSemibold"
                               TextColor="{StaticResource TextPrimary}"
                               HorizontalOptions="Center"/>
                        <Label Text="Try adjusting your search"
                               FontSize="16"
                               TextColor="{StaticResource TextSecondary}"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </CollectionView.EmptyView>
                
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Style="{StaticResource CardFrame}"
                               Padding="16"
                               Margin="0,0,0,16"
                               BorderColor="{StaticResource Border}">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.CourseTappedCommand}"
                                                     CommandParameter="{Binding .}"/>
                            </Frame.GestureRecognizers>
                            
                            <Grid RowDefinitions="Auto,Auto,Auto,Auto" 
                                  RowSpacing="12">
                                
                                <!-- Course Image -->
                                <Frame Grid.Row="0"
                                       HeightRequest="180"
                                       CornerRadius="16"
                                       Padding="0"
                                       IsClippedToBounds="True"
                                       HasShadow="False"
                                       BackgroundColor="{StaticResource SurfaceVariant}"
                                       BorderColor="Transparent">
                                    <Image Source="{Binding ImageUrl}"
                                           Aspect="AspectFill"/>
                                </Frame>

                                <!-- Title & Category -->
                                <VerticalStackLayout Grid.Row="1" Spacing="8">
                                    <Label Text="{Binding Title}"
                                           FontSize="20"
                                           FontFamily="OpenSansSemibold"
                                           TextColor="{StaticResource TextPrimary}"
                                           LineBreakMode="WordWrap"
                                           MaxLines="2"/>
                                    
                                    <Frame BackgroundColor="{StaticResource SurfaceVariant}"
                                           Padding="10,6"
                                           CornerRadius="8"
                                           HasShadow="False"
                                           HorizontalOptions="Start"
                                           BorderColor="Transparent">
                                        <Label Text="{Binding Category}"
                                               FontSize="12"
                                               FontFamily="OpenSansSemibold"
                                               TextColor="{StaticResource Primary}"/>
                                    </Frame>
                                </VerticalStackLayout>

                                <!-- Author & Price -->
                                <Grid Grid.Row="2" ColumnDefinitions="*,Auto">
                                    <Label Grid.Column="0"
                                           Text="{Binding SellerName, StringFormat='by {0}'}"
                                           FontSize="14"
                                           TextColor="{StaticResource TextSecondary}"
                                           VerticalOptions="Center"/>
                                    
                                    <Label Grid.Column="1"
                                           Text="{Binding Price, StringFormat='${0:F2}'}"
                                           FontSize="24"
                                           FontFamily="OpenSansSemibold"
                                           TextColor="{StaticResource Primary}"
                                           VerticalOptions="Center"/>
                                </Grid>

                                <!-- Action Buttons -->
                                <Grid Grid.Row="3" ColumnDefinitions="*,Auto" ColumnSpacing="12">
                                    <Button Grid.Column="0"
                                            Text="View Details"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.CourseTappedCommand}"
                                            CommandParameter="{Binding .}"
                                            BackgroundColor="{StaticResource Primary}"
                                            TextColor="{StaticResource TextOnPrimary}"
                                            CornerRadius="12"
                                            HeightRequest="48"/>
                                    
                                    <Frame Grid.Column="1"
                                           Background="{StaticResource PrimaryGradient}"
                                           CornerRadius="12"
                                           Padding="0"
                                           HasShadow="False"
                                           WidthRequest="48"
                                           HeightRequest="48"
                                           BorderColor="Transparent">
                                        <Frame.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.ToggleFavoriteCommand}"
                                                                 CommandParameter="{Binding .}"/>
                                        </Frame.GestureRecognizers>
                                        <Label Text="â™¥"
                                               FontSize="24"
                                               TextColor="{StaticResource TextOnPrimary}"
                                               HorizontalOptions="Center"
                                               VerticalOptions="Center"/>
                                    </Frame>
                                </Grid>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>
    </Grid>
</ContentPage>

