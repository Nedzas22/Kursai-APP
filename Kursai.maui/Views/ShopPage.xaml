<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Kursai.maui.Views.ShopPage"
             Title="{Binding Title}"
             BackgroundColor="{StaticResource Background}">
    
    <Grid RowDefinitions="Auto,*" RowSpacing="0">
        
        <!-- Premium Header with Search -->
        <Frame Grid.Row="0" 
               CornerRadius="0,0,32,32"
               Background="{StaticResource PrimaryGradient}"
               Padding="24,20,24,32"
               HasShadow="False"
               BorderColor="Transparent">
            <Frame.Shadow>
                <Shadow Brush="{StaticResource Shadow}" 
                        Opacity="0.4" 
                        Radius="20" 
                        Offset="0,8"/>
            </Frame.Shadow>
            <VerticalStackLayout Spacing="16">
                <Label Text="Discover Courses"
                       FontSize="28"
                       FontFamily="OpenSansSemibold"
                       TextColor="{StaticResource TextOnPrimary}"/>
                
                <Frame BackgroundColor="Black"
                       CornerRadius="16"
                       Padding="4"
                       HasShadow="False"
                       HeightRequest="56"
                       BorderColor="Transparent">
                    <SearchBar Text="{Binding SearchText}"
                               Placeholder="Search for courses..."
                               BackgroundColor="Transparent"
                               PlaceholderColor="#808080"
                               TextColor="White"
                               CancelButtonColor="{StaticResource Primary}"/>
                </Frame>
            </VerticalStackLayout>
        </Frame>

        <!-- Courses List -->
        <RefreshView Grid.Row="1"
                     Command="{Binding LoadCoursesCommand}"
                     IsRefreshing="{Binding IsBusy}"
                     RefreshColor="{StaticResource Primary}">
            <CollectionView ItemsSource="{Binding Courses}"
                            SelectionMode="None"
                            Margin="16,16,16,0">
                <CollectionView.EmptyView>
                    <VerticalStackLayout HorizontalOptions="Center"
                                        VerticalOptions="Center"
                                        Spacing="20"
                                        Padding="40">
                        <Label Text="ðŸ”"
                               FontSize="72"
                               HorizontalOptions="Center"/>
                        <Label Text="No courses found"
                               FontSize="24"
                               FontFamily="OpenSansSemibold"
                               TextColor="{StaticResource TextPrimary}"
                               HorizontalOptions="Center"/>
                        <Label Text="Try adjusting your search"
                               FontSize="16"
                               TextColor="{StaticResource TextSecondary}"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </CollectionView.EmptyView>
                
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Style="{StaticResource ElevatedCard}"
                               Padding="20"
                               Margin="0,0,0,16">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.CourseTappedCommand}"
                                                     CommandParameter="{Binding .}"/>
                            </Frame.GestureRecognizers>
                            
                            <Grid RowDefinitions="Auto,Auto,Auto" 
                                  RowSpacing="16">
                                

                                <!-- Title & Category -->
                                <VerticalStackLayout Grid.Row="0" Spacing="8">
                                    <Label Text="{Binding Title}"
                                           FontSize="20"
                                           FontFamily="OpenSansSemibold"
                                           TextColor="{StaticResource TextPrimary}"
                                           LineBreakMode="WordWrap"
                                           MaxLines="2"/>
                                    
                                    <HorizontalStackLayout Spacing="8">
                                        <Frame BackgroundColor="{StaticResource SurfaceVariant}"
                                               Padding="10,6"
                                               CornerRadius="8"
                                               HasShadow="False"
                                               HorizontalOptions="Start"
                                               BorderColor="Transparent">
                                            <Label Text="{Binding Category}"
                                                   FontSize="12"
                                                   FontFamily="OpenSansSemibold"
                                                   TextColor="{StaticResource Primary}"/>
                                        </Frame>
                                        
                                        <!-- File Attachment Indicator -->
                                        <Frame BackgroundColor="{StaticResource Info}"
                                               Padding="8,6"
                                               CornerRadius="8"
                                               HasShadow="False"
                                               HorizontalOptions="Start"
                                               BorderColor="Transparent"
                                               IsVisible="{Binding AttachmentFileName, Converter={StaticResource IsNotNullOrEmptyConverter}}">
                                            <HorizontalStackLayout Spacing="4">
                                                <Label Text="{Binding AttachmentFileType, Converter={StaticResource FileTypeToIconConverter}}"
                                                       FontSize="14"
                                                       TextColor="{StaticResource TextOnInfo}"
                                                       VerticalOptions="Center"/>
                                                <Label Text="Material"
                                                       FontSize="11"
                                                       FontFamily="OpenSansSemibold"
                                                       TextColor="{StaticResource TextOnInfo}"
                                                       VerticalOptions="Center"/>
                                            </HorizontalStackLayout>
                                        </Frame>
                                    </HorizontalStackLayout>
                                </VerticalStackLayout>

                                <!-- Author & Price -->
                                <Grid Grid.Row="1" ColumnDefinitions="*,Auto">
                                    <VerticalStackLayout Grid.Column="0" Spacing="4">
                                        <Label Text="{Binding SellerName, StringFormat='by {0}'}"
                                               FontSize="14"
                                               TextColor="{StaticResource TextSecondary}"
                                               VerticalOptions="Center"/>
                                        
                                        <!-- Rating Display - Simple numeric format -->
                                        <HorizontalStackLayout Spacing="6"
                                                              IsVisible="{Binding TotalRatings, Converter={StaticResource IsGreaterThanZeroConverter}}">
                                            <Frame BackgroundColor="{StaticResource Primary}"
                                                   CornerRadius="6"
                                                   Padding="6,3"
                                                   HasShadow="False">
                                                <Label FontSize="12"
                                                       TextColor="{StaticResource TextOnPrimary}"
                                                       FontFamily="OpenSansSemibold">
                                                    <Label.FormattedText>
                                                        <FormattedString>
                                                            <Span Text="â˜… "/>
                                                            <Span Text="{Binding AverageRating, StringFormat='{0:F1}'}"/>
                                                        </FormattedString>
                                                    </Label.FormattedText>
                                                </Label>
                                            </Frame>
                                            <Label Text="{Binding TotalRatings, StringFormat='({0})'}"
                                                   FontSize="12"
                                                   TextColor="{StaticResource TextSecondary}"
                                                   VerticalOptions="Center"/>
                                        </HorizontalStackLayout>
                                    </VerticalStackLayout>
                                    
                                    <Label Grid.Column="1"
                                           Text="{Binding Price, StringFormat='${0:F2}'}"
                                           FontSize="32"
                                           FontFamily="OpenSansSemibold"
                                           TextColor="{StaticResource Primary}"
                                           VerticalOptions="Center"/>
                                </Grid>

                                <!-- Action Buttons -->
                                <Grid Grid.Row="2" ColumnDefinitions="*,Auto" ColumnSpacing="12" Margin="0,4,0,0">
                                    <Button Grid.Column="0"
                                            Text="View Details"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.CourseTappedCommand}"
                                            CommandParameter="{Binding .}"
                                            FontFamily="OpenSansSemibold"
                                            FontSize="16"
                                            HeightRequest="52"/>
                                    
                                    <Button Grid.Column="1"
                                            Text="â™¥"
                                            Style="{StaticResource IconButton}"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.ToggleFavoriteCommand}"
                                            CommandParameter="{Binding .}"
                                            BackgroundColor="{StaticResource Primary}"
                                            TextColor="{StaticResource TextOnPrimary}"
                                            FontSize="20"/>
                                </Grid>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>
    </Grid>
</ContentPage>

