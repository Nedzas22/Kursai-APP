<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Kursai.maui.Views.MyCoursesPage"
             Title="{Binding Title}">
    
    <Grid RowDefinitions="Auto,Auto,*">
        <!-- Back Button -->
        <Button Grid.Row="0"
                Text="â† Back"
                Command="{Binding BackCommand}"
                BackgroundColor="Transparent"
                TextColor="{StaticResource Primary}"
                FontSize="16"
                HorizontalOptions="Start"
                Padding="10,10,0,0"
                Margin="10,0,0,0"/>
        
        <Button Grid.Row="1"
                Text="+ Create New Course"
                Command="{Binding AddCourseCommand}"
                BackgroundColor="{StaticResource Primary}"
                TextColor="White"
                Margin="10"/>

        <RefreshView Grid.Row="2"
                     Command="{Binding LoadCoursesCommand}"
                     IsRefreshing="{Binding IsBusy}">
            <CollectionView ItemsSource="{Binding Courses}"
                            SelectionMode="None">
                <CollectionView.EmptyView>
                    <VerticalStackLayout HorizontalOptions="Center"
                                        VerticalOptions="Center"
                                        Spacing="15"
                                        Padding="40">
                        <Label Text="ðŸ“š"
                               FontSize="64"
                               HorizontalOptions="Center"/>
                        <Label Text="You haven't created any courses yet"
                               HorizontalOptions="Center"
                               TextColor="Gray"
                               FontSize="16"/>
                        <Button Text="Create Your First Course"
                                Command="{Binding AddCourseCommand}"
                                BackgroundColor="{StaticResource Primary}"
                                TextColor="White"
                                HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </CollectionView.EmptyView>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="15" Margin="10,5" HasShadow="True" CornerRadius="10">
                            <Grid ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto,Auto,Auto">
                                <Frame Grid.Row="0" Grid.RowSpan="3" Grid.Column="0"
                                       WidthRequest="80"
                                       HeightRequest="80"
                                       CornerRadius="10"
                                       Padding="0"
                                       IsClippedToBounds="True"
                                       HasShadow="False"
                                       Margin="0,0,15,0">
                                    <Image Source="{Binding ImageUrl}"
                                           Aspect="AspectFill"/>
                                </Frame>

                                <Label Grid.Row="0" Grid.Column="1"
                                       Text="{Binding Title}"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       VerticalOptions="End"/>
                                <Label Grid.Row="1" Grid.Column="1"
                                       Text="{Binding Category}"
                                       FontSize="14"
                                       TextColor="Gray"
                                       VerticalOptions="Center"
                                       Margin="0,5,0,0"/>
                                <Label Grid.Row="2" Grid.Column="1"
                                       Text="{Binding Price, StringFormat='${0:F2}'}"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="{StaticResource Primary}"
                                       VerticalOptions="Start"
                                       Margin="0,5,0,0"/>

                                <VerticalStackLayout Grid.Row="0" Grid.RowSpan="3" Grid.Column="2"
                                                    VerticalOptions="Center"
                                                    Spacing="8">
                                    <Button Text="Edit"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.EditCourseCommand}"
                                            CommandParameter="{Binding .}"
                                            BackgroundColor="{StaticResource Primary}"
                                            TextColor="White"
                                            FontSize="12"
                                            Padding="15,5"
                                            WidthRequest="80"/>
                                    <Button Text="Delete"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.DeleteCourseCommand}"
                                            CommandParameter="{Binding .}"
                                            BackgroundColor="Red"
                                            TextColor="White"
                                            FontSize="12"
                                            Padding="15,5"
                                            WidthRequest="80"/>
                                </VerticalStackLayout>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>
    </Grid>
</ContentPage>