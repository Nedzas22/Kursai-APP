<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Kursai.maui.Views.MyCoursesPage"
             Title="{Binding Title}">
    
    <Grid RowDefinitions="Auto,Auto,*">
        <!-- Premium Header -->
        <Frame Grid.Row="0" 
               CornerRadius="0,0,32,32"
               Background="{StaticResource SuccessGradient}"
               Padding="24,20,24,32"
               HasShadow="False"
               BorderColor="Transparent">
            <Frame.Shadow>
                <Shadow Brush="{StaticResource Shadow}" 
                        Opacity="0.4" 
                        Radius="20" 
                        Offset="0,8"/>
            </Frame.Shadow>
            <VerticalStackLayout Spacing="4">
                <Label Text="My Courses"
                       FontSize="28"
                       FontFamily="OpenSansSemibold"
                       TextColor="White"/>
                <Label Text="Courses you've created"
                       FontSize="14"
                       TextColor="White"
                       Opacity="0.9"/>
            </VerticalStackLayout>
        </Frame>

        <Button Grid.Row="1"
                Text="+ Create New Course"
                Command="{Binding AddCourseCommand}"
                BackgroundColor="{StaticResource Primary}"
                TextColor="White"
                Margin="10"/>

        <RefreshView Grid.Row="2"
                     Command="{Binding LoadCoursesCommand}"
                     IsRefreshing="{Binding IsBusy}">
            <CollectionView ItemsSource="{Binding Courses}"
                            SelectionMode="None">
                <CollectionView.EmptyView>
                    <VerticalStackLayout HorizontalOptions="Center"
                                        VerticalOptions="Center"
                                        Spacing="15"
                                        Padding="40">
                        <Label Text="ðŸ“š"
                               FontSize="64"
                               HorizontalOptions="Center"/>
                        <Label Text="You haven't created any courses yet"
                               HorizontalOptions="Center"
                               TextColor="Gray"
                               FontSize="16"/>
                        <Button Text="Create Your First Course"
                                Command="{Binding AddCourseCommand}"
                                BackgroundColor="{StaticResource Primary}"
                                TextColor="White"
                                HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </CollectionView.EmptyView>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="15" Margin="10,5" HasShadow="True" CornerRadius="10">
                            <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto,Auto,Auto">
                                <Label Grid.Row="0" Grid.Column="0"
                                       Text="{Binding Title}"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       VerticalOptions="End"/>
                                
                                <HorizontalStackLayout Grid.Row="1" Grid.Column="0" Spacing="8" Margin="0,5,0,0">
                                    <Label Text="{Binding Category}"
                                           FontSize="14"
                                           TextColor="Gray"
                                           VerticalOptions="Center"/>
                                    
                                    <!-- File Attachment Indicator -->
                                    <Frame BackgroundColor="{StaticResource Info}"
                                           Padding="6,4"
                                           CornerRadius="6"
                                           HasShadow="False"
                                           BorderColor="Transparent"
                                           IsVisible="{Binding AttachmentFileName, Converter={StaticResource IsNotNullOrEmptyConverter}}"
                                           VerticalOptions="Center">
                                        <HorizontalStackLayout Spacing="4">
                                            <Label Text="{Binding AttachmentFileType, Converter={StaticResource FileTypeToIconConverter}}"
                                                   FontSize="12"
                                                   TextColor="{StaticResource TextOnInfo}"
                                                   VerticalOptions="Center"/>
                                            <Label Text="Material"
                                                   FontSize="10"
                                                   FontFamily="OpenSansSemibold"
                                                   TextColor="{StaticResource TextOnInfo}"
                                                   VerticalOptions="Center"/>
                                        </HorizontalStackLayout>
                                    </Frame>
                                </HorizontalStackLayout>
                                
                                <Label Grid.Row="2" Grid.Column="0"
                                       Text="{Binding Price, StringFormat='${0:F2}'}"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="{StaticResource Primary}"
                                       VerticalOptions="Start"
                                       Margin="0,5,0,0"/>

                                <VerticalStackLayout Grid.Row="0" Grid.RowSpan="4" Grid.Column="1"
                                                    VerticalOptions="Center"
                                                    Spacing="8">
                                    <Button Text="Edit"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.EditCourseCommand}"
                                            CommandParameter="{Binding .}"
                                            BackgroundColor="{StaticResource Primary}"
                                            TextColor="White"
                                            FontSize="12"
                                            Padding="15,5"
                                            WidthRequest="80"/>
                                    <Button Text="Delete"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.DeleteCourseCommand}"
                                            CommandParameter="{Binding .}"
                                            BackgroundColor="Red"
                                            TextColor="White"
                                            FontSize="12"
                                            Padding="15,5"
                                            WidthRequest="80"/>
                                </VerticalStackLayout>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>
    </Grid>
</ContentPage>