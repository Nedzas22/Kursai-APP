<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Kursai.maui.Views.LibraryPage"
             Title="{Binding Title}"
             BackgroundColor="{StaticResource Background}">
    
    <Grid RowDefinitions="Auto,*">
        
        <!-- Premium Header -->
        <Frame Grid.Row="0" 
               CornerRadius="0,0,32,32"
               Background="{StaticResource AccentGradient}"
               Padding="24,20,24,32"
               HasShadow="False"
               BorderColor="Transparent">
            <Frame.Shadow>
                <Shadow Brush="{StaticResource Shadow}" 
                        Opacity="0.4" 
                        Radius="20" 
                        Offset="0,8"/>
            </Frame.Shadow>
            <VerticalStackLayout Spacing="4">
                <Label Text="My Library"
                       FontSize="28"
                       FontFamily="OpenSansSemibold"
                       TextColor="{StaticResource TextOnPrimary}"/>
                <Label Text="Your favorite courses"
                       FontSize="14"
                       TextColor="{StaticResource TextOnPrimary}"
                       Opacity="0.8"/>
            </VerticalStackLayout>
        </Frame>

        <!-- Library Content -->
        <RefreshView Grid.Row="1"
                     Command="{Binding LoadCoursesCommand}"
                     IsRefreshing="{Binding IsBusy}"
                     RefreshColor="{StaticResource Primary}"
                     Margin="16,16,16,0">
            <CollectionView ItemsSource="{Binding Courses}"
                            SelectionMode="None">
                <CollectionView.EmptyView>
                    <VerticalStackLayout HorizontalOptions="Center"
                                        VerticalOptions="Center"
                                        Spacing="24"
                                        Padding="40">
                        <Label Text="♥"
                               FontSize="96"
                               TextColor="{StaticResource Primary}"
                               HorizontalOptions="Center"/>
                        <Label Text="Your Library is Empty"
                               FontSize="26"
                               FontFamily="OpenSansSemibold"
                               TextColor="{StaticResource TextPrimary}"
                               HorizontalOptions="Center"/>
                        <Label Text="Start adding courses to your favorites from the Shop"
                               FontSize="16"
                               TextColor="{StaticResource TextSecondary}"
                               HorizontalOptions="Center"
                               HorizontalTextAlignment="Center"
                               LineBreakMode="WordWrap"
                               Margin="20,0"/>
                        <Button Text="Browse Courses"
                                BackgroundColor="{StaticResource Primary}"
                                TextColor="{StaticResource TextOnPrimary}"
                                CornerRadius="12"
                                HeightRequest="52"
                                WidthRequest="200"
                                Margin="0,16,0,0"/>
                    </VerticalStackLayout>
                </CollectionView.EmptyView>
                
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Style="{StaticResource ElevatedCard}"
                               Padding="20"
                               Margin="0,0,0,16">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.CourseTappedCommand}"
                                                     CommandParameter="{Binding .}"/>
                            </Frame.GestureRecognizers>
                            
                            <Grid ColumnDefinitions="*,Auto" 
                                  RowDefinitions="*"
                                  ColumnSpacing="16">

                                <!-- Course Info -->
                                <VerticalStackLayout Grid.Column="0"
                                                    Padding="0,8"
                                                    Spacing="10"
                                                    VerticalOptions="Center">
                                    <Label Text="{Binding Title}"
                                           FontSize="18"
                                           FontFamily="OpenSansSemibold"
                                           TextColor="{StaticResource TextPrimary}"
                                           LineBreakMode="TailTruncation"
                                           MaxLines="2"/>
                                    
                                    <HorizontalStackLayout Spacing="8">
                                        <Frame BackgroundColor="{StaticResource SurfaceVariant}"
                                               Padding="10,6"
                                               CornerRadius="8"
                                               HasShadow="False"
                                               HorizontalOptions="Start"
                                               BorderColor="Transparent">
                                            <Label Text="{Binding Category}"
                                                   FontSize="12"
                                                   FontFamily="OpenSansSemibold"
                                                   TextColor="{StaticResource Primary}"/>
                                        </Frame>
                                        
                                        <!-- File Attachment Indicator -->
                                        <Frame BackgroundColor="{StaticResource Info}"
                                               Padding="8,6"
                                               CornerRadius="8"
                                               HasShadow="False"
                                               HorizontalOptions="Start"
                                               BorderColor="Transparent"
                                               IsVisible="{Binding AttachmentFileName, Converter={StaticResource IsNotNullOrEmptyConverter}}">
                                            <HorizontalStackLayout Spacing="4">
                                                <Label Text="{Binding AttachmentFileType, Converter={StaticResource FileTypeToIconConverter}}"
                                                       FontSize="14"
                                                       TextColor="{StaticResource TextOnInfo}"
                                                       VerticalOptions="Center"/>
                                                <Label Text="Material"
                                                       FontSize="11"
                                                       FontFamily="OpenSansSemibold"
                                                       TextColor="{StaticResource TextOnInfo}"
                                                       VerticalOptions="Center"/>
                                            </HorizontalStackLayout>
                                        </Frame>
                                    </HorizontalStackLayout>
                                    
                                    <Label Text="{Binding SellerName, StringFormat='by {0}'}"
                                           FontSize="13"
                                           TextColor="{StaticResource TextTertiary}"/>
                                </VerticalStackLayout>

                                <!-- Favorite Indicator -->
                                <Frame Grid.Column="1"
                                       Background="{StaticResource PrimaryGradient}"
                                       CornerRadius="14"
                                       Padding="0"
                                       HasShadow="False"
                                       WidthRequest="56"
                                       HeightRequest="56"
                                       VerticalOptions="Center"
                                       BorderColor="Transparent">
                                    <Label Text="♥"
                                           FontSize="28"
                                           TextColor="{StaticResource TextOnPrimary}"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center"/>
                                </Frame>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>
    </Grid>
</ContentPage>

