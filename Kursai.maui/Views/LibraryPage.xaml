<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Kursai.maui.Views.LibraryPage"
             Title="{Binding Title}"
             BackgroundColor="{StaticResource Background}">
    
    <Grid RowDefinitions="Auto,*">
        
        <!-- Premium Header -->
        <Frame Grid.Row="0" 
               CornerRadius="0,0,32,32"
               Background="{StaticResource PrimaryGradient}"
               Padding="24,20,24,24"
               HasShadow="True"
               BorderColor="Transparent">
            <HorizontalStackLayout Spacing="12">
                <Label Text="♥"
                       FontSize="32"
                       TextColor="{StaticResource TextOnPrimary}"
                       VerticalOptions="Center"/>
                <Label Text="My Library"
                       FontSize="28"
                       FontFamily="OpenSansSemibold"
                       TextColor="{StaticResource TextOnPrimary}"
                       VerticalOptions="Center"/>
            </HorizontalStackLayout>
        </Frame>

        <!-- Library Content -->
        <RefreshView Grid.Row="1"
                     Command="{Binding LoadCoursesCommand}"
                     IsRefreshing="{Binding IsBusy}"
                     RefreshColor="{StaticResource Primary}"
                     Margin="16,16,16,0">
            <CollectionView ItemsSource="{Binding Courses}"
                            SelectionMode="None">
                <CollectionView.EmptyView>
                    <VerticalStackLayout HorizontalOptions="Center"
                                        VerticalOptions="Center"
                                        Spacing="24"
                                        Padding="40">
                        <Label Text="♥"
                               FontSize="96"
                               TextColor="{StaticResource Primary}"
                               HorizontalOptions="Center"/>
                        <Label Text="Your Library is Empty"
                               FontSize="26"
                               FontFamily="OpenSansSemibold"
                               TextColor="{StaticResource TextPrimary}"
                               HorizontalOptions="Center"/>
                        <Label Text="Start adding courses to your favorites from the Shop"
                               FontSize="16"
                               TextColor="{StaticResource TextSecondary}"
                               HorizontalOptions="Center"
                               HorizontalTextAlignment="Center"
                               LineBreakMode="WordWrap"
                               Margin="20,0"/>
                        <Button Text="Browse Courses"
                                BackgroundColor="{StaticResource Primary}"
                                TextColor="{StaticResource TextOnPrimary}"
                                CornerRadius="12"
                                HeightRequest="52"
                                WidthRequest="200"
                                Margin="0,16,0,0"/>
                    </VerticalStackLayout>
                </CollectionView.EmptyView>
                
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Style="{StaticResource CardFrame}"
                               Padding="16"
                               Margin="0,0,0,16"
                               BorderColor="{StaticResource Border}">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.CourseTappedCommand}"
                                                     CommandParameter="{Binding .}"/>
                            </Frame.GestureRecognizers>
                            
                            <Grid ColumnDefinitions="120,*,Auto" 
                                  RowDefinitions="*"
                                  ColumnSpacing="16">
                                
                                <!-- Course Image -->
                                <Frame Grid.Column="0"
                                       WidthRequest="120"
                                       HeightRequest="120"
                                       CornerRadius="16"
                                       Padding="0"
                                       IsClippedToBounds="True"
                                       HasShadow="False"
                                       BackgroundColor="{StaticResource SurfaceVariant}"
                                       BorderColor="Transparent">
                                    <Image Source="{Binding ImageUrl}"
                                           Aspect="AspectFill"/>
                                </Frame>

                                <!-- Course Info -->
                                <VerticalStackLayout Grid.Column="1"
                                                    Padding="0,8"
                                                    Spacing="10"
                                                    VerticalOptions="Center">
                                    <Label Text="{Binding Title}"
                                           FontSize="18"
                                           FontFamily="OpenSansSemibold"
                                           TextColor="{StaticResource TextPrimary}"
                                           LineBreakMode="TailTruncation"
                                           MaxLines="2"/>
                                    
                                    <Frame BackgroundColor="{StaticResource SurfaceVariant}"
                                           Padding="10,6"
                                           CornerRadius="8"
                                           HasShadow="False"
                                           HorizontalOptions="Start"
                                           BorderColor="Transparent">
                                        <Label Text="{Binding Category}"
                                               FontSize="12"
                                               FontFamily="OpenSansSemibold"
                                               TextColor="{StaticResource Primary}"/>
                                    </Frame>
                                    
                                    <Label Text="{Binding SellerName, StringFormat='by {0}'}"
                                           FontSize="13"
                                           TextColor="{StaticResource TextTertiary}"/>
                                </VerticalStackLayout>

                                <!-- Favorite Indicator -->
                                <Frame Grid.Column="2"
                                       Background="{StaticResource PrimaryGradient}"
                                       CornerRadius="14"
                                       Padding="0"
                                       HasShadow="False"
                                       WidthRequest="56"
                                       HeightRequest="56"
                                       VerticalOptions="Center"
                                       BorderColor="Transparent">
                                    <Label Text="♥"
                                           FontSize="28"
                                           TextColor="{StaticResource TextOnPrimary}"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center"/>
                                </Frame>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>
    </Grid>
</ContentPage>

