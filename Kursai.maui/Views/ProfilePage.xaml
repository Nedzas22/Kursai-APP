<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Kursai.maui.Views.ProfilePage"
             Title="{Binding Title}"
             BackgroundColor="{StaticResource Background}">
    <ScrollView>
        <VerticalStackLayout Padding="0" Spacing="0">

            <!-- Premium Profile Header with Gold Gradient -->
            <Frame CornerRadius="0,0,32,32"
                   Background="{StaticResource PrimaryGradient}"
                   Padding="24,40,24,32"
                   HasShadow="True"
                   BorderColor="Transparent">
                <Grid RowDefinitions="Auto,Auto,Auto" 
                      ColumnDefinitions="Auto,*"
                      RowSpacing="12">
                    
                    <!-- Avatar with Border -->
                    <Frame Grid.Row="0" Grid.RowSpan="2" Grid.Column="0"
                           CornerRadius="44"
                           WidthRequest="88"
                           HeightRequest="88"
                           Padding="4"
                           HasShadow="False"
                           Margin="0,0,20,0"
                           BackgroundColor="{StaticResource Surface}"
                           BorderColor="{StaticResource Surface}">
                        <Frame CornerRadius="40"
                               Padding="0"
                               HasShadow="False"
                               BackgroundColor="{StaticResource SurfaceVariant}">
                            <Label Text="{Binding UserInitial}"
                                   FontSize="40"
                                   TextColor="{StaticResource Primary}"
                                   FontFamily="OpenSansSemibold"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Frame>
                    </Frame>

                    <!-- User Name -->
                    <Label Grid.Row="0" Grid.Column="1"
                           Text="{Binding Username}"
                           FontSize="26"
                           FontFamily="OpenSansSemibold"
                           TextColor="{StaticResource TextOnPrimary}"
                           VerticalOptions="End"/>
                    
                    <!-- Email -->
                    <Label Grid.Row="1" Grid.Column="1"
                           Text="{Binding Email}"
                           FontSize="15"
                           TextColor="{StaticResource TextOnPrimary}"
                           Opacity="0.8"
                           VerticalOptions="Start"
                           Margin="0,4,0,0"/>
                    
                    <!-- Stats -->
                    <HorizontalStackLayout Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                                          Spacing="16"
                                          Margin="0,20,0,0">
                        <Frame BackgroundColor="{StaticResource Surface}"
                               Padding="20,12"
                               CornerRadius="16"
                               HasShadow="False"
                               HorizontalOptions="FillAndExpand">
                            <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                                <Label Text="ðŸ“š"
                                       FontSize="24"
                                       VerticalOptions="Center"/>
                                <VerticalStackLayout Spacing="2">
                                    <Label Text="{Binding CoursesCreated}"
                                           FontSize="24"
                                           FontFamily="OpenSansSemibold"
                                           TextColor="{StaticResource Primary}"
                                           HorizontalOptions="Center"/>
                                    <Label Text="Courses"
                                           FontSize="12"
                                           TextColor="{StaticResource TextSecondary}"
                                           HorizontalOptions="Center"/>
                                </VerticalStackLayout>
                            </HorizontalStackLayout>
                        </Frame>
                        
                        <Frame BackgroundColor="{StaticResource Surface}"
                               Padding="20,12"
                               CornerRadius="16"
                               HasShadow="False"
                               HorizontalOptions="FillAndExpand">
                            <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                                <Label Text="â™¥"
                                       FontSize="24"
                                       TextColor="{StaticResource Primary}"
                                       VerticalOptions="Center"/>
                                <VerticalStackLayout Spacing="2">
                                    <Label Text="{Binding FavoritesCount}"
                                           FontSize="24"
                                           FontFamily="OpenSansSemibold"
                                           TextColor="{StaticResource Primary}"
                                           HorizontalOptions="Center"/>
                                    <Label Text="Saved"
                                           FontSize="12"
                                           TextColor="{StaticResource TextSecondary}"
                                           HorizontalOptions="Center"/>
                                </VerticalStackLayout>
                            </HorizontalStackLayout>
                        </Frame>
                    </HorizontalStackLayout>
                </Grid>
            </Frame>

            <!-- Content Section -->
            <VerticalStackLayout Padding="20,24" Spacing="20">
                
                <!-- Quick Action - Create Course -->
                <Frame Style="{StaticResource CardFrame}"
                       Padding="24"
                       Background="{StaticResource PrimaryGradient}"
                       BorderColor="{StaticResource Primary}">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding AddCourseCommand}"/>
                    </Frame.GestureRecognizers>
                    <Grid ColumnDefinitions="Auto,*,Auto">
                        <Frame Grid.Column="0"
                               BackgroundColor="{StaticResource Surface}"
                               CornerRadius="16"
                               Padding="0"
                               HasShadow="False"
                               WidthRequest="56"
                               HeightRequest="56"
                               Margin="0,0,16,0">
                            <Label Text="+"
                                   FontSize="36"
                                   TextColor="{StaticResource Primary}"
                                   FontFamily="OpenSansSemibold"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Frame>
                        <VerticalStackLayout Grid.Column="1" 
                                            VerticalOptions="Center"
                                            Spacing="4">
                            <Label Text="Create New Course"
                                   FontSize="18"
                                   FontFamily="OpenSansSemibold"
                                   TextColor="{StaticResource TextOnPrimary}"/>
                            <Label Text="Share your knowledge"
                                   FontSize="13"
                                   TextColor="{StaticResource TextOnPrimary}"
                                   Opacity="0.8"/>
                        </VerticalStackLayout>
                        <Label Grid.Column="2"
                               Text="â€º"
                               FontSize="32"
                               TextColor="{StaticResource TextOnPrimary}"
                               VerticalOptions="Center"/>
                    </Grid>
                </Frame>

                <!-- Menu Items -->
                <Label Text="Manage Content"
                       FontSize="16"
                       FontFamily="OpenSansSemibold"
                       TextColor="{StaticResource TextSecondary}"
                       Margin="4,8,0,8"/>

                <Frame Style="{StaticResource CardFrame}" Padding="0" BorderColor="{StaticResource Border}">
                    <VerticalStackLayout Spacing="0">
                        
                        <!-- My Courses -->
                        <Frame Padding="20" 
                               CornerRadius="20" 
                               HasShadow="False" 
                               BackgroundColor="Transparent"
                               BorderColor="Transparent">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding ViewMyCoursesCommand}"/>
                            </Frame.GestureRecognizers>
                            <Grid ColumnDefinitions="Auto,*,Auto">
                                <Frame Grid.Column="0"
                                       BackgroundColor="{StaticResource SurfaceVariant}"
                                       CornerRadius="12"
                                       Padding="0"
                                       HasShadow="False"
                                       WidthRequest="48"
                                       HeightRequest="48"
                                       Margin="0,0,16,0"
                                       BorderColor="Transparent">
                                    <Label Text="ðŸ“–"
                                           FontSize="24"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center"/>
                                </Frame>
                                <Label Grid.Column="1"
                                       Text="My Created Courses"
                                       FontSize="16"
                                       TextColor="{StaticResource TextPrimary}"
                                       VerticalOptions="Center"/>
                                <Label Grid.Column="2"
                                       Text="â€º"
                                       FontSize="28"
                                       TextColor="{StaticResource TextTertiary}"
                                       VerticalOptions="Center"/>
                            </Grid>
                        </Frame>

                        <BoxView HeightRequest="1" 
                                Color="{StaticResource Border}" 
                                Margin="20,0"/>

                        <!-- My Library -->
                        <Frame Padding="20" 
                               CornerRadius="20" 
                               HasShadow="False" 
                               BackgroundColor="Transparent"
                               BorderColor="Transparent">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding ViewLibraryCommand}"/>
                            </Frame.GestureRecognizers>
                            <Grid ColumnDefinitions="Auto,*,Auto">
                                <Frame Grid.Column="0"
                                       Background="{StaticResource PrimaryGradient}"
                                       CornerRadius="12"
                                       Padding="0"
                                       HasShadow="False"
                                       WidthRequest="48"
                                       HeightRequest="48"
                                       Margin="0,0,16,0"
                                       BorderColor="Transparent">
                                    <Label Text="â™¥"
                                           FontSize="24"
                                           TextColor="{StaticResource TextOnPrimary}"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center"/>
                                </Frame>
                                <Label Grid.Column="1"
                                       Text="My Library"
                                       FontSize="16"
                                       TextColor="{StaticResource TextPrimary}"
                                       VerticalOptions="Center"/>
                                <Label Grid.Column="2"
                                       Text="â€º"
                                       FontSize="28"
                                       TextColor="{StaticResource TextTertiary}"
                                       VerticalOptions="Center"/>
                            </Grid>
                        </Frame>
                    </VerticalStackLayout>
                </Frame>

                <!-- Logout Button - Prominent -->
                <Frame Style="{StaticResource CardFrame}"
                       Padding="0"
                       BackgroundColor="{StaticResource Error}"
                       BorderColor="{StaticResource Error}"
                       Margin="0,24,0,0">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding LogoutCommand}"/>
                    </Frame.GestureRecognizers>
                    <Grid Padding="24" ColumnDefinitions="Auto,*,Auto">
                        <Frame Grid.Column="0"
                               BackgroundColor="White"
                               CornerRadius="12"
                               Padding="0"
                               HasShadow="False"
                               WidthRequest="48"
                               HeightRequest="48"
                               Margin="0,0,16,0"
                               Opacity="0.9">
                            <Label Text="ðŸšª"
                                   FontSize="24"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Frame>
                        <VerticalStackLayout Grid.Column="1" 
                                            VerticalOptions="Center"
                                            Spacing="2">
                            <Label Text="Sign Out"
                                   FontSize="18"
                                   FontFamily="OpenSansSemibold"
                                   TextColor="White"/>
                            <Label Text="Logout from your account"
                                   FontSize="13"
                                   TextColor="White"
                                   Opacity="0.8"/>
                        </VerticalStackLayout>
                        <Label Grid.Column="2"
                               Text="â€º"
                               FontSize="32"
                               TextColor="White"
                               VerticalOptions="Center"/>
                    </Grid>
                </Frame>

                <!-- Version Info -->
                <Label Text="Version 1.0.0"
                       FontSize="12"
                       TextColor="{StaticResource TextTertiary}"
                       HorizontalOptions="Center"
                       Margin="0,16,0,32"/>

            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>