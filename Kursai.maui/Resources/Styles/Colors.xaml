<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Premium Minimalistic Color Palette -->
    
    <!-- Primary Colors -->
    <Color x:Key="Primary">#1A1A1A</Color>
    <Color x:Key="PrimaryDark">#000000</Color>
    <Color x:Key="PrimaryLight">#2D2D2D</Color>
    
    <!-- Accent Colors -->
    <Color x:Key="Accent">#FFD700</Color>
    <Color x:Key="AccentDark">#FFC700</Color>
    <Color x:Key="AccentLight">#FFE44D</Color>
    
    <!-- Background Colors -->
    <Color x:Key="Background">#FFFFFF</Color>
    <Color x:Key="BackgroundDark">#F8F8F8</Color>
    <Color x:Key="BackgroundLight">#FCFCFC</Color>
    
    <!-- Surface Colors -->
    <Color x:Key="Surface">#FFFFFF</Color>
    <Color x:Key="SurfaceVariant">#F5F5F5</Color>
    
    <!-- Text Colors -->
    <Color x:Key="TextPrimary">#1A1A1A</Color>
    <Color x:Key="TextSecondary">#6B6B6B</Color>
    <Color x:Key="TextTertiary">#9E9E9E</Color>
    <Color x:Key="TextOnPrimary">#FFFFFF</Color>
    <Color x:Key="TextOnAccent">#1A1A1A</Color>
    
    <!-- Border Colors -->
    <Color x:Key="Border">#E0E0E0</Color>
    <Color x:Key="BorderLight">#F0F0F0</Color>
    
    <!-- Status Colors -->
    <Color x:Key="Success">#10B981</Color>
    <Color x:Key="Warning">#F59E0B</Color>
    <Color x:Key="Error">#EF4444</Color>
    <Color x:Key="Info">#3B82F6</Color>
    
    <!-- Shadow Color -->
    <Color x:Key="Shadow">#10000000</Color>

    <!-- Legacy Support -->
    <Color x:Key="Secondary">#6B6B6B</Color>
    <Color x:Key="Tertiary">#9E9E9E</Color>
    <Color x:Key="White">White</Color>
    <Color x:Key="Black">Black</Color>
    <Color x:Key="Gray100">#F8F8F8</Color>
    <Color x:Key="Gray200">#E0E0E0</Color>
    <Color x:Key="Gray300">#BDBDBD</Color>
    <Color x:Key="Gray400">#9E9E9E</Color>
    <Color x:Key="Gray500">#6B6B6B</Color>
    <Color x:Key="Gray600">#424242</Color>
    <Color x:Key="Gray900">#1A1A1A</Color>

    <!-- Gradients -->
    <LinearGradientBrush x:Key="PrimaryGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#1A1A1A" Offset="0.0" />
        <GradientStop Color="#2D2D2D" Offset="1.0" />
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="AccentGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#FFD700" Offset="0.0" />
        <GradientStop Color="#FFC700" Offset="1.0" />
    </LinearGradientBrush>

</ResourceDictionary>