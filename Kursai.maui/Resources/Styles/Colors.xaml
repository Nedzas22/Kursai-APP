<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Premium Dark Theme Color Palette -->
    
    <!-- Primary Colors -->
    <Color x:Key="Primary">#FFD700</Color>
    <Color x:Key="PrimaryDark">#FFC700</Color>
    <Color x:Key="PrimaryLight">#FFE44D</Color>
    
    <!-- Background Colors - Black Theme -->
    <Color x:Key="Background">#000000</Color>
    <Color x:Key="BackgroundDark">#0A0A0A</Color>
    <Color x:Key="BackgroundLight">#1A1A1A</Color>
    
    <!-- Surface Colors - Dark -->
    <Color x:Key="Surface">#1A1A1A</Color>
    <Color x:Key="SurfaceVariant">#2D2D2D</Color>
    <Color x:Key="SurfaceLight">#333333</Color>
    
    <!-- Text Colors -->
    <Color x:Key="TextPrimary">#FFFFFF</Color>
    <Color x:Key="TextSecondary">#B0B0B0</Color>
    <Color x:Key="TextTertiary">#808080</Color>
    <Color x:Key="TextOnPrimary">#000000</Color>
    <Color x:Key="TextOnAccent">#000000</Color>
    
    <!-- Accent Colors -->
    <Color x:Key="Accent">#FFD700</Color>
    <Color x:Key="AccentDark">#FFC700</Color>
    <Color x:Key="AccentLight">#FFE44D</Color>
    
    <!-- Border Colors -->
    <Color x:Key="Border">#333333</Color>
    <Color x:Key="BorderLight">#404040</Color>
    
    <!-- Status Colors -->
    <Color x:Key="Success">#10B981</Color>
    <Color x:Key="Warning">#F59E0B</Color>
    <Color x:Key="Error">#EF4444</Color>
    <Color x:Key="Info">#3B82F6</Color>
    
    <!-- Shadow Color -->
    <Color x:Key="Shadow">#30000000</Color>

    <!-- Legacy Support -->
    <Color x:Key="Secondary">#B0B0B0</Color>
    <Color x:Key="Tertiary">#808080</Color>
    <Color x:Key="White">White</Color>
    <Color x:Key="Black">Black</Color>
    <Color x:Key="Gray100">#1A1A1A</Color>
    <Color x:Key="Gray200">#2D2D2D</Color>
    <Color x:Key="Gray300">#404040</Color>
    <Color x:Key="Gray400">#666666</Color>
    <Color x:Key="Gray500">#808080</Color>
    <Color x:Key="Gray600">#B0B0B0</Color>
    <Color x:Key="Gray900">#FFFFFF</Color>

    <!-- Gradients -->
    <LinearGradientBrush x:Key="PrimaryGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#FFD700" Offset="0.0" />
        <GradientStop Color="#FFC700" Offset="1.0" />
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="BackgroundGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#000000" Offset="0.0" />
        <GradientStop Color="#1A1A1A" Offset="1.0" />
    </LinearGradientBrush>

</ResourceDictionary>