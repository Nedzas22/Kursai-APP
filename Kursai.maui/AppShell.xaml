<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Kursai.maui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Kursai.maui.Views"
    Title="Kursai.maui"
    Shell.TabBarBackgroundColor="{StaticResource Surface}"
    Shell.TabBarForegroundColor="{StaticResource Primary}"
    Shell.TabBarTitleColor="{StaticResource TextPrimary}"
    Shell.TabBarUnselectedColor="{StaticResource TextTertiary}">

    <Shell.Resources>
        <Style x:Key="TabBarStyle" TargetType="TabBar">
            <Setter Property="Shell.TabBarBackgroundColor" Value="{StaticResource Surface}" />
            <Setter Property="Shell.TabBarForegroundColor" Value="{StaticResource Primary}" />
            <Setter Property="Shell.TabBarTitleColor" Value="{StaticResource TextPrimary}" />
            <Setter Property="Shell.TabBarUnselectedColor" Value="{StaticResource TextTertiary}" />
        </Style>
    </Shell.Resources>

    <ShellContent
        Route="LoginPage"
        ContentTemplate="{DataTemplate views:LoginPage}"
        Shell.FlyoutBehavior="Disabled"
        Shell.NavBarIsVisible="False"
        Shell.TabBarIsVisible="False" />

    <TabBar Route="MainTabs" x:Name="MainTabs"
            Shell.FlyoutBehavior="Disabled"
            Style="{StaticResource TabBarStyle}">
        <Tab Title="Shop" Icon="dotnet_bot.png">
            <ShellContent ContentTemplate="{DataTemplate views:ShopPage}" 
                         Route="ShopPage"/>
        </Tab>
        <Tab Title="Library" Icon="dotnet_bot.png">
            <ShellContent ContentTemplate="{DataTemplate views:LibraryPage}" 
                         Route="LibraryPage"/>
        </Tab>
        <Tab Title="Profile" Icon="dotnet_bot.png">
            <ShellContent ContentTemplate="{DataTemplate views:ProfilePage}" 
                         Route="ProfilePageTab"/>
        </Tab>
    </TabBar>

</Shell>
